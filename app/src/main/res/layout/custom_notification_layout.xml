<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--card_view:cardCornerRadius="25dp"-->
            <!--card_view:cardPreventCornerOverlap="false">-->

        <!--</android.support.v7.widget.CardView>-->

        <ImageView
            android:id="@+id/circleImageView2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/sarathi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/trip_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:text="New Trip: Rs 450"
            android:textColor="@color/notification_top_color"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/circleImageView2"
            />

        <TextView
            android:id="@+id/from_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="From: Zoo Read,Jwalakhel"
            android:textSize="16sp"
            android:textColor="@color/notification_middle_color"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_below="@+id/trip_fee"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/circleImageView2"/>

        <TextView
            android:id="@+id/to_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="To: New Road,Kathmandu"
            android:textColor="@color/notification_top_color"
            android:textSize="16sp"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_below="@+id/from_location"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/circleImageView2"/>

        <TextView
            android:id="@+id/accept_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Accept"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/circleImageView2"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:textColor="@color/notification_middle_color"
            android:textStyle="bold"
            android:layout_below="@+id/to_location"/>

    <TextView
        android:id="@+id/detail_notification"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/to_location"
        android:layout_alignBottom="@+id/accept_notification"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toRightOf="@+id/accept_notification"
        android:text="Details"
        android:textSize="20sp"
        android:textColor="@color/notification_middle_color"
        android:textStyle="bold" />
</RelativeLayout>